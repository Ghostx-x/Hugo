<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CircularShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="SpinnerItemStyle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">@font/quicksand_semibold</item>
    </style>

    <style name="SpinnerStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CustomDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>


    <style name="DarkTimePickerDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:background">@color/darkblue</item>
        <item name="android:buttonBarButtonStyle">@style/BlackButton</item>
    </style>

    <style name="BlackButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@android:color/black</item>
    </style>

</resources>