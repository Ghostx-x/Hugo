<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- No Dogs Message -->
    <TextView
        android:id="@+id/no_dogs_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No dogs found, please add a dog below."
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:visibility="gone"
        android:padding="8dp" />

    <!-- Dog Count Container -->
    <LinearLayout
        android:id="@+id/dog_count_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:visibility="gone">

        <ImageButton
            android:id="@+id/btnDecrease"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_minus"
            android:background="@null"
            android:contentDescription="Decrease count" />

        <TextView
            android:id="@+id/txtDogCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="24sp"
            android:layout_marginHorizontal="20dp" />

        <ImageButton
            android:id="@+id/btnIncrease"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_plus"
            android:background="@null"
            android:contentDescription="Increase count" />
    </LinearLayout>

    <Button
        android:id="@+id/add_dogs_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Dogs"
        android:layout_gravity="center"
        android:visibility="gone" />

    <Button
        android:id="@+id/save_dogs_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Dogs"
        android:layout_gravity="center"
        android:visibility="gone" />

    <!-- Dog Details Container -->
    <LinearLayout
        android:id="@+id/dog_details_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone" />

    <!-- Form Placeholder (Removed as it's now dynamic) -->
    <LinearLayout
        android:id="@+id/add_dog_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <!-- Dynamic form will be added here -->
    </LinearLayout>

    <!-- RecyclerView to Display Dogs -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/dog_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <!-- Loading Indicator -->
    <ProgressBar
        android:id="@+id/dog_loading_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

</LinearLayout>