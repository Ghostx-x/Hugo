<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/dog_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_dog_placeholder" />

    <TextView
        android:id="@+id/dog_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/dog_image"
        app:layout_constraintStart_toStartOf="@id/dog_image"
        app:layout_constraintEnd_toEndOf="@id/dog_image"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/dog_breed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Breed"
        app:layout_constraintTop_toBottomOf="@id/dog_name"
        app:layout_constraintStart_toStartOf="@id/dog_image"
        app:layout_constraintEnd_toEndOf="@id/dog_image"
        android:layout_marginTop="2dp" />

    <TextView
        android:id="@+id/dog_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Age"
        app:layout_constraintTop_toBottomOf="@id/dog_breed"
        app:layout_constraintStart_toStartOf="@id/dog_image"
        app:layout_constraintEnd_toEndOf="@id/dog_image"
        android:layout_marginTop="2dp" />

</androidx.constraintlayout.widget.ConstraintLayout>